@{
    Layout = "~/Views/Shared/Master.cshtml";
}


<div>
    <form action="/Recrutadora/Store" method="post" onsubmit="validarFormulario();">
        <div class="form-group" id="div-campo-nome">
            <label for="campo-nome">Nome<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Recrutadora.Nome" id="campo-nome" placeholder="Digite um nome" required="required" onfocusout="validarCampoNome()" value="@ViewBag.Recrutadora.Nome">
            <span class="text-danger">@Html.ValidationMessage("Recrutadora.Nome")</span>
        </div>
        <div class="form-group">
            <label for="campo-cpf">CPF<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Recrutadora.CPF" id="campo-cpf" placeholder="Digite um CPF" required="required" value="@ViewBag.Recrutadora.CPF">
            <span class="text-danger">@Html.ValidationMessage("Recrutadora.cpf")</span> 
        </div>
        <div class="form-group">
            <label for="campo-salario">Salário<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Recrutadora.Salario" id="campo-salario" placeholder="Digite um salário" required="required" value="@ViewBag.Recrutadora.Salario">
            <span class="text-danger">@Html.ValidationMessage("Recrutadora.Salario")</span> 
</div>
        <div class="form-group">
            <label for="campo-tempo-empresa">Tempo Empresa<span class="text-danger">*</span></label>
            <select id="campo-tempo-empresa" class="form-control" name="Recrutadora.TempoEmpresa" placeholder="Selecione um campo" required="required" value="@ViewBag.Recrutadora.TempoEmpresa">
                @Html.ValidationMessage("Recrutadora.TempoEmpresa")
                <option value="0">0 anos</option>
                <option value="1">1 ano</option>
                <option value="2">2 anos</option>
                <option value="3">3 anos</option>
                <option value="4">4 anos</option>
                <option value="5">5 anos</option>
                <option value="6">6 anos</option>
            </select>
        </div>
       <button type="submit" class="btn btn-outline-success"><i class="fa fa-save"></i>Salvar</button>


    </form>
</div>

